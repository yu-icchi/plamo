<form id="form-specs">
    <script type="application/javascript">
        $('#form-specs').on('submit', function(e) {
            e.preventDefault();

            var submit = $(this).find('#submit');

            var data = $('#form-specs').serializeJSON();
            console.log(data);

            $.ajax({
                url: '/post',
                type: 'post',
                data: data,
                beforeSend: function() {
                    submit.attr('disabled', true);
                    console.log('beforeSend');
                },
                complete: function() {
                    submit.attr('disabled', false);
                    console.log('complete');
                },
                success: function() {
                    console.log('success');
                },
                error: function() {
                    console.log('error');
                }
            });

            return false;
        });
    </script>
    {{form}}
    <button id="submit" type="submit" class="btn btn-default">OK</button>
</form>