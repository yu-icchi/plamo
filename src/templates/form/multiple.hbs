<div class="multiple_input_group">
    <fieldset class="input-field col s12">

        <script type="application/javascript">

            $("#multiple_add_btn_{{id}}").click(function(e) {
                e.preventDefault();
                $("#multiple_{{id}}").append(
                    '<fieldset>' +
                    '<button class="btn waves-effect waves-light btn-flat multiple_sub_btn">&times;</button>' +
                    '{{form}}</fieldset>'
                );
            });

            $(".multiple_input_group").on("click", ".multiple_sub_btn", function(e) {
                e.preventDefault();
                $(this).parent('fieldset').remove();
            });

        </script>

        <legend>{{label}}</legend>
        <button id="multiple_add_btn_{{id}}" class="btn waves-effect waves-light">Add</button>
        <p>
            <div id="multiple_{{id}}"></div>
        </p>
    </fieldset>
</div>
