<div class="multiple_input_group">
    <fieldset class="input-field col s12">

        <script type="application/javascript">

            $("#multiple_add_btn_{{id}}").click(function(e) {
                e.preventDefault();
                $("#multiple_{{id}}").append(
                    '<fieldset>' +
                    '<a class="btn waves-effect waves-light btn-flat multiple_sub_btn"><i class="mdi-content-clear"></i></a>' +
                    '{{form}}</fieldset>'
                );
            });

            $(".multiple_input_group").on("click", ".multiple_sub_btn", function(e) {
                e.preventDefault();
                $(this).parent('fieldset').remove();
            });

        </script>

        <legend>{{label}}</legend>
        <a id="multiple_add_btn_{{id}}" class="btn waves-effect waves-light">
            <i class="mdi-content-add-circle"></i>
        </a>
        <p>
            <div id="multiple_{{id}}"></div>
        </p>
    </fieldset>
</div>
